	journal = {ECOLOGY LETTERS},
	author = {Fletcher, Jr., Robert J. and Sefair, Jorge A. and Wang, Chao and Poli, Caroline L. and Smith, Thomas A. H. and Bruna, Emilio M. and Holt, Robert D. and Barfield, Michael and Marx, Andrew J. and Acevedo, Miguel A.},
