@article{schimanskiEvaluationScholarshipAcademic2018a,
	title = {The evaluation of scholarship in academic promotion and tenure processes: {Past}, present, and future},
	volume = {7},
	issn = {2046-1402},
	shorttitle = {The evaluation of scholarship in academic promotion and tenure processes},
