	journal = {PLOS Biology},
	author = {Eysenbach, Gunther},
	month = may,
	year = {2006},
	note = {Publisher: Public Library of Science},
	keywords = {Bibliometrics, Citation analysis, Open access publishing, Peer review, Scientific publishing, Institutional repositories, Internet, Scientists},
	pages = {e157},
