	journal = {Ecology Letters},
	author = {Gotelli, Nicholas J. and Colwell, Robert K.},
	year = {2001},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1046/j.1461-0248.2001.00230.x},
	keywords = {biodiversity, rarefaction, accumulation curves, asymptotic richness, category–subcategory ratios, richness estimation, species density, Species richness, taxon sampling, taxonomic ratios},
	pages = {379--391},
	file = {Full Text PDF:files/7611/Gotelli and Colwell - 2001 - Quantifying biodiversity procedures and pitfalls .pdf:application/pdf;Snapshot:files/7612/j.1461-0248.2001.00230.html:text/html},
