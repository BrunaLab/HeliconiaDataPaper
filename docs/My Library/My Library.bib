@article{jurinitzAbioticBioticInfluences2013a,
	title = {Abiotic and {Biotic} {Influences} on {Early}-{Stage} {Survival} in {Two} {Shade}-{Tolerant} {Tree} {Species} in {Brazil}'s {Atlantic} {Forest}},
