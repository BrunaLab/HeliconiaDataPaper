	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1890/09-2226.1},
	keywords = {Carduus nutans, matrix model, integrodifference equation, invasions, musk thistle, New Zealand, nodding thistle, spatial integral projection models (SIPMs), spatial population dynamics, Wald analytical long-distance model},
	pages = {86--97},
