	year = {2019},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2745.13206},
	keywords = {landscape, fire, demography, Florida scrub, Hypericum cumulicola, integral projection models (IPMs)},
	pages = {2760--2771},
	file = {Full Text PDF:files/9733/Quintana-Ascencio et al. - 2019 - Assessing the roles of seed bank, seed dispersal a.pdf:application/pdf;Snapshot:files/9732/1365-2745.html:text/html},
}

@article{beckmanAdvancingInterdisciplinaryFramework2020,
	title = {Advancing an interdisciplinary framework to study seed dispersal ecology},
	volume = {12},
	issn = {2041-2851},
	url = {https://doi.org/10.1093/aobpla/plz048},
