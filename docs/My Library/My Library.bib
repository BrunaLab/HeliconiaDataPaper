	keywords = {Biodiversity, Configuration, Habitat amount, Habitat loss},
	pages = {9--15},
	file = {ScienceDirect Full Text PDF:files/8937/Fletcher et al. - 2018 - Is habitat fragmentation good for biodiversity.pdf:application/pdf;ScienceDirect Snapshot:files/8938/S0006320718305779.html:text/html},
