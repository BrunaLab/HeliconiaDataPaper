	urldate = {2021-11-29},
	journal = {PLoS ONE},
	author = {Vasconcelos, Heraldo L. and Pacheco, Renata and Silva, Raphael C. and Vasconcelos, Pedro B. and Lopes, Cauê T. and Costa, Alan N. and Bruna, Emilio M.},
