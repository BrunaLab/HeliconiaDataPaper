	author = {Rogers, Haldre S and Beckman, Noelle G and Hartig, Florian and Johnson, Jeremy S and Pufal, Gesine and Shea, Katriona and Zurell, Damaris and Bullock, James M and Cantrell, Robert Stephen and Loiselle, Bette and Pejchar, Liba and Razafindratsima, Onja H and Sandor, Manette E and Schupp, Eugene W and Strickland, W Christopher and Zambrano, Jenny},
	month = sep,
	year = {2019},
	pages = {plz042},
	file = {Full Text PDF:files/9749/Rogers et al. - 2019 - The total dispersal kernel a review and future di.pdf:application/pdf},
}

