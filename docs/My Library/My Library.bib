	url = {https://www.webofscience.com/api/gateway?GWVersion=2&SrcAuth=DOISource&SrcApp=WOS&KeyAID=10.1007%2Fs00442-015-3341-3&DestApp=DOI&SrcAppSID=USW2EC0D2Eicdp7DEck1v5vKvkL3N&SrcJTitle=OECOLOGIA&DestDOIRegistrantName=Springer-Verlag},
