@article{doi:10.1126/science.1201609,
  title = {A Large and Persistent Carbon Sink in the World's Forests},
  author = {Pan, Yude and Birdsey, Richard A. and Fang, Jingyun and Houghton, Richard and Kauppi, Pekka E. and Kurz, Werner A. and Phillips, Oliver L. and Shvidenko, Anatoly and Lewis, Simon L. and Canadell, Josep G. and Ciais, Philippe and Jackson, Robert B. and Pacala, Stephen W. and McGuire, A. David and Piao, Shilong and Rautiainen, Aapo and Sitch, Stephen and {Daniel Hayes}},
