@article{brunaHabitatFragmentationDemographic2002,
  title = {Habitat Fragmentation and the Demographic Structure of an {{Amazonian}} Understory Herb ({{{\emph{Heliconia}}}}{\emph{ Acuminata}})},
  author = {Bruna, Emilio M. and Kress, W. John},
  year = {2002},
